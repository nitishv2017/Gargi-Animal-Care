<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneOTPPage">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/OTPPageToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF"
        android:elevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#FFF"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginRight="16dp"
                android:id="@+id/backbtn_phoneOTP"/>
            <TextView
                android:id="@+id/textViewOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:text="Phone OTP verification"
                android:textSize="24sp"
                android:textColor="@color/font_"
                android:fontFamily="@font/signika_semibold"
                />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:weightSum="14"
        android:background="@color/registration_Background"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/textViewEnterOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/enter_OTP"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/font_"
            android:fontFamily="@font/signika_semibold"
            />

        <EditText
            android:id="@+id/enterOTPEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:importantForAutofill="no"
            android:hint="@null"
            android:backgroundTint="@color/font_"
            android:textColor="@color/font_"
            android:fontFamily="@font/signika_light"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/submitLoginOTPBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/font_"
            android:fontFamily="@font/signika_semibold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"
            android:textColor="@color/font_"
            android:text="Not recieved OTP?"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            />
        <Button
            android:id="@+id/generateNewOTPBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/generate_new_OTP"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/signika_semibold"
            android:textColor="@color/font_"
            />

    </LinearLayout>


</RelativeLayout>