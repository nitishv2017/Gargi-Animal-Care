<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneOTPPage">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/registrationOTPPageToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF"
        android:elevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#FFF"
            >
            <TextView
                android:id="@+id/textViewOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="normal"
                android:fontFamily="@font/signika_semibold"
                android:textColor="@color/font_"
                android:text="@string/appName"
                android:textSize="28sp"
                />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        android:weightSum="14"
        android:background="@color/registration_Background"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/regtextViewEnterOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/signika_semibold"
            android:textColor="@color/font_"
            android:text="@string/enter_OTP"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/registerPhoneOTPEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:hint="@null"
            android:fontFamily="@font/signika_light"
            android:backgroundTint="@color/font_"
            android:importantForAutofill="no" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/submitOTPBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT OTP"
            android:layout_gravity="center"
            android:fontFamily="@font/signika_semibold"
            android:textColor="@color/font_"
            android:layout_weight="1"
            />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_light"
            android:textColor="@color/font_"
            android:text="Not recieved OTP?"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/generateNewOTPBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/generate_new_OTP"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/signika_semibold"
            android:textColor="@color/font_"
            />




    </LinearLayout>


</RelativeLayout>